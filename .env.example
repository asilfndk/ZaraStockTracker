# Zara Stock Tracker Configuration
# Copy this file to .env and modify as needed

# Region settings
ZARA_COUNTRY=tr
ZARA_LANGUAGE=en

# Check interval (seconds)
ZARA_CHECK_INTERVAL=300

# Cache settings
ZARA_CACHE_ENABLED=true
ZARA_CACHE_TTL=300

# Notification settings
ZARA_PUSH_ENABLED=true

# Telegram notifications (optional)
ZARA_TELEGRAM_ENABLED=false
ZARA_TELEGRAM_BOT_TOKEN=
ZARA_TELEGRAM_CHAT_ID=

# Logging
ZARA_LOG_LEVEL=INFO
# ZARA_LOG_FILE=/path/to/zara.log

# Advanced
ZARA_TIMEOUT=15
ZARA_MAX_RETRIES=3
ZARA_RETRY_DELAY=1.0
